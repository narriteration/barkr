<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link type="text/css" rel="stylesheet" href="/styles/main.css">

  <!-- bootstrap css -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link type = "text/css" rel="stylesheet" href ="/styles/main.css" >
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="./scripts/app.js"></script>

  <title>Profile</title>
</head>

<body class="profile">

  <!-- Begin Bootstrap -->
  <div class="site-wrapper">

      <div class="site-wrapper-inner row">

          <div class="container text-center">
          <!-- <div class="container col-md-6 col-md-offset-3 text-center"> -->


              <!-- Begin Header -->
              <div class="masthead clearfix">
                  <div class="container inner">
                      <h3 class="masthead-brand"></h3>
                      <nav>
                          <ul class="nav masthead-nav">
                              <li>
                                  <button a href = "https://www.google.com/maps?q=san+francisco+dog+parks+map&um=1&ie=UTF-8&sa=X&ved=0ahUKEwiPvqXSs9zSAhUDxWMKHdAWDMQQ_AUICCgB" type="button" class="btn btn-default" aria-label="Map">
                                      <span class="glyphicon glyphicon-map-marker" aria-hidden="true">
                                      </span>
                                  </button>
                              </li>
                              <li>
                                  <button type="button" class="btn btn-default" aria-label="Sign In">
                                      <span class="glyphicon glyphicon-user" aria-hidden="true">
                                      </span>
                                  </button>
                              </li>
                              <li>
                                  <button type="button" class="btn btn-default" aria-label="Create Profile" onclick="location.href = '/signup';">
                                      <span class="glyphicon glyphicon-plus" aria-hidden="true">
                                      </span>
                                  </button>
                              </li>
                          </ul>
                      </nav>
                  </div>
              </div>
              <!--End Header-->

            <!---Begin body -->
              <div class="row text-center">
                    <div class="col-md-6 col-md-offset-3">
                      <h1 class="cover-heading clr-lightgreen">barkr</h1>
                      <h3>Profile</h3>
                      <h3>Welcome <%= owner.ownerName %>!</h3>
                      <hr>
                      <div>
                          <ul>
                              <li><img src="<%= owner.gender %>" alt="My image"></li>
                              <li><%= owner.age %></li>
                              <li><%= owner.imgOwner %></li>
                              <li><%= owner.email %></li>
                          </ul>
                      </div>
                    </div>
              </div>

  <div id="addDog"> <!--Start div addDog-->
      <h3 class="text-center">Add a dog:</h3>
      <br>
      <div class="row">
          <div class="col-md-6 col-md-offset-2">

              <form class="form-inline" id="newDogForm">

                    <div class="form-group">
                        <label for="title letters-spaced">Name</label>
                        <input type="text" class="form-control" name="dogName" placeholder="Pookie">
                    </div>

                    <div class="form-group">
                        <label for="breed">Breed</label>
                        <input type="text" class="form-control" name="breed" placeholder="Golden Retriever">
                    </div>

                  <div class="form-group">
                      <div class="radio">
                          <label>
                              <input type="radio" name="isBig" required>Big Dog</label>
                      </div>
                      <div class="radio">
                          <label>
                          <input type="radio" name="isBig" required>Small Dog</label>
                      </div>
                  </div>

                  <div class="form-group">
                      <label for="imgDog">Upload a pic here!</label>
                      <input type="text" class="form-control" name="imgDog" placeholder="Select an online image you like, and paste the URL here">
                  </div>
                  <div class="form-group">
                      <label for="human">Who is the owner?</label>
                      <input type="text" class="form-control" name="human" placeholder="Type full name of owner">
                  </div>
                  <div class="form-group">
                      <div class="checkbox">
                          <label>
                              <input type="checkbox" name = "isSocialized" data-error="Before you wreck yourself" required>Plays well with Others?
                          </label>
                          <div class="help-block with-errors"></div>
                      </div>
                  </div>

                  <br>

                  <button type="submit" class="btn btn-default dogPost">Create New Pup Profile</button>

              </form>
            </div>
        </div>
    </div>
    <!--End div addDog-->

<div id = 'newProfileDog'>
</div>

<div id = 'newProfileOwner'>
</div>

  <!--Start modal-->
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
      <div class="modal-dialog">

          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title">Are you sure you want to delete this Dog??</h4>
              </div>

              <div class="modal-body">
                  <fieldset class='form-horizontal'>
                      <div class="form-group">
                          <label class="col-md-8 control-label">This action is permanent and cannot be undone</label>
                      </div>
                  </fieldset>
              </div>

              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-danger" id="deleteDog">Delete Dog?</button>
              </div>

          </div>

      </div>
    </div>
    <!-- end modal -->


      </div>
    </div>
  </div>

</body>
</html>

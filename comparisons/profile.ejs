<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link type="text/css" rel="stylesheet" href="/styles/main.css">
  <!-- bootstrap css -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <link type = "text/css" rel="stylesheet" href ="/styles/main.css" >
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="./scripts/app.js"></script>
  <title>Profile</title>
</head>
<body class="profile">
  <div class="container text-center">
    <div class="row">
      <%owner%>
      <div class="col-md-6 col-md-offset-3 ownerId" data-human-id = <%= owner._id %>>
        <h1>Welcome <span class='owner-name'><%= owner.ownerName %></span></h1>
        <hr>
        <h3>You're logged in as <%= owner.email %>.</h2>
          <ul>
              <li><img src="<%= owner.imgOwner %>" alt="My image"></li>
              <li>Age: <span class ='owner-age'><%= owner.age %></span></li>
              <li>Gender: <span class='owner-gender'><%= owner.gender %></span></li>
              <li>Email: <span class = 'owner-email'><%= owner.email %></span></li>
          </ul>
          <div class ="col-md-1 pull-left">
            <button id="saveOwner" class="btn btn-info save-owner hidden" type="save">
              <span class="label">Save Changes</span>
              <span class="glyphicon glyphicon-ok"></span>
            </button>
            <button id="updateOwner" class="btn btn-info update-owner" type="update">
              <span class="label">Update Owner</span>
              <span class="glyphicon glyphicon-pencil"></span>
            </button>
          </div>
        </div>
  <div class="container">
      <h1 class="text-center clr-lightgreen">barkr</h1>
      <hr>
      <h3 class="text-center">Tell us more about your pup...</h3>
      <br>
      <div class="row">
          <div class="col-md-6 col-md-offset-2">








              <form class="form-inline" id="newDogForm">
                    <div class="form-group">
                        <label for="title letters-spaced">Name</label>
                        <input type="text" class="form-control" name="dogName" placeholder="Pookie">
                    </div>
                    <div class="form-group">
                        <label for="breed">Breed</label>
                        <input type="text" class="form-control" name="breed" placeholder="Golden Retriever">
                    </div>
                  <div class="form-group">
                      <div class="radio">
                          <label>
                              <input type="radio" name="isBig" required>Big Dog</label>
                      </div>
                      <div class="radio">
                          <label>
                          <input type="radio" name="isBig" required>Small Dog</label>
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="imgDog">Upload a pic here!</label>
                      <input type="text" class="form-control" name="imgDog" placeholder="Select an online image you like, and paste the URL here">
                  </div>
                  <div class="form-group">
                      <label for="human">Who is the owner?</label>
                      <input type="text" class="form-control" name="human" placeholder="Type full name of owner">
                  </div>
                  <div class="form-group">
                      <div class="checkbox">
                          <label>
                              <input type="checkbox" name = "isSocialized" data-error="Before you wreck yourself" >Plays well with Others?
                          </label>
                          <div class="help-block with-errors"></div>
                      </div>
                  </div>
                  <br>
                  <button type="submit" class="btn btn-default dogPost">Create Pup Profile</button>
              </form>







          </div>
      </div>
  </div>
  <% dogs %>
  <% for(var i=0; i<dogs.length; i++) { %>
            <p>
            <div class='col-sm-6 row dog border text-center' data-dog-id = <%= dogs[i]._id %> >
            <img src="<%= dogs[i].imgDog %>" alt="book image">
            <br/>
              <span class='dog-name'><%=dogs[i].dogName%></span>
              is a <span class='dog-size'><%=(dogs[i].isBig === true ? 'large' : 'small')%></span><span class='dog-breed'> <%=dogs[i].breed%></span>.
              <br/>
              They are <span class='dog-temper'><%=(dogs[i].isSocialized === true ? 'great' : 'not very good')%></span> with other dogs.
              <br/>
              </p>
              <button id="updateDog" class="btn btn-info update-dog" type="update">
              <span class="label">Update Dog</span>
              <span class="glyphicon glyphicon-pencil"></span>
              </button>
              <button id="saveDog" class="btn btn-info save-dog hidden" type="save">
              <span class="label">Save Changes</span>
              <span class="glyphicon glyphicon-ok"></span>
              </button>
              <button id="delete" class="btn btn-danger delete-dog" type="delete">
              <span class="label">Delete Dog</span>
              <span class="glyphicon glyphicon-trash"></span>
              </button>
              </div>
         <% } %>
  </div>
  <!-- /.col-lg-6 -->
  </div>
  <!-- /.row -->
<div id = 'newProfileDog'>
</div>
<div id = 'newProfileOwner'>
</div>

  <!-- Start modal content-->
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title">Are you sure you want to delete this Dog??</h4>
              </div>
              <div class="modal-body">
                  <fieldset class='form-horizontal'>
                      <div class="form-group">
                          <label class="col-md-8 control-label">This action is permanent and cannot be undone</label>
                      </div>
                  </fieldset>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-danger" id="deleteDog">Delete Dog?</button>
              </div>
          </div>
      </div>
  </div>
  <!-- /.modal -->

    </div>
  </div>
</body>
</html>
